@layout FlatpurseApp.Components.Shared.AccountLayout

@page "/forgotPass"

@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<BreadcrumbLink></BreadcrumbLink>
<MudGrid Class="mt-5">
    <MudItem xs="12" sm="4">
    </MudItem>
    <MudItem xs="12" sm="4">
        <MudPaper Class="pa-4">
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudText Typo="Typo.h5" Class="mb-5" Align="Align.Center" Color="Color.Primary">FORGET PASSWORD</MudText>
                <MudTextField @bind-Value="Email"  Margin="Margin.Dense" Class="mt-5" Label="Email" RequiredError="Email is required!"
                              Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" Variant="Variant.Outlined" />
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" href="index" Class="ml-auto mt-3">Forget</MudButton>
                    <MudButton Variant="Variant.Filled" Style="float:right" href="/login"  Class="ml-auto mt-3">Back to login</MudButton>
            </MudForm>
        </MudPaper>
    </MudItem>
   
</MudGrid>


@code {
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm? form;
    public string Email { get; set; }
    public string Pass { get; set; }

}